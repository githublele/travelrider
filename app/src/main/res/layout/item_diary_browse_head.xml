<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/diary_cover_imageview"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:src="@drawable/picture_default"
        android:scaleType="fitXY"
        />

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_head_default"
            android:id="@+id/head_icon_imageview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="10dp"
            />

            <TextView
                android:id="@+id/diary_headline_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="环游世界，爽"
                android:textSize="20sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_alignTop="@+id/head_icon_imageview"
                android:layout_toRightOf="@+id/head_icon_imageview"
                 />

            <TextView
                android:id="@+id/diary_base_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="2016.02.22    /7天"
                android:textSize="12sp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/head_icon_imageview"
                android:layout_toEndOf="@+id/head_icon_imageview" />


    </RelativeLayout>



</FrameLayout>