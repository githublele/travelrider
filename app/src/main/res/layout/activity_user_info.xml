<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_general_gray"
    android:orientation="vertical" >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/colorBlue"
        android:orientation="horizontal"
        >
        <Button
            android:onClick="backFun"
            android:id="@id/back_btn"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_width="55dp"
            android:layout_height="32dp"
            android:background="@mipmap/back_navigate_bk"
            android:layout_centerVertical="true"
            />

        <TextView
            android:textColor="@color/text_color_normal_white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="个人资料"
            android:textSize="24sp"
            android:gravity="center"
            />
    </RelativeLayout>

<LinearLayout
    android:layout_marginTop="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/user_head_icon_rl"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        >
<TextView
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="头像"
    android:textSize="18sp"
    android:textColor="@color/text_color_general_black"
    />

        <ImageView
            android:id="@+id/head_icon_imageview"
            android:src="@mipmap/icon_head_default"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/right_nav_h"
            />
        
        <ImageView
            android:id="@+id/right_nav_h"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_nav_right_arrows"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/colorGray"
    ></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/user_nickname_rl"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        >
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="18sp"
            android:textColor="@color/text_color_general_black"
            />

        <TextView
            android:id="@+id/nickname_tv"
            android:layout_centerVertical="true"
            android:text="落仔"
            android:textSize="15sp"
            android:textColor="@color/colorHintGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/right_nav_n"
            />

        <ImageView
            android:id="@+id/right_nav_n"
            android:layout_centerVertical="true"
            android:layout_width="24dp"
            android:layout_height="48dp"
            android:src="@mipmap/icon_nav_right_arrows"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

</LinearLayout>




    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/user_city_rl"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户"
                android:textSize="18sp"
                android:textColor="@color/text_color_general_black"
                />

            <TextView
                android:id="@+id/account_tv"
                android:layout_centerVertical="true"
                android:text="用户1"
                android:textSize="15sp"
                android:textColor="@color/colorHintGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/right_nav_c"
                />

            <ImageView
                android:id="@+id/right_nav_c"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_nav_right_arrows"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorGray"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/user_sex_rl"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="18sp"
                android:textColor="@color/text_color_general_black"
                />

            <TextView
                android:id="@+id/sex_tv"
                android:layout_centerVertical="true"
                android:text="男"
                android:textSize="15sp"
                android:textColor="@color/colorHintGray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/right_nav_s"
                />

            <ImageView
                android:id="@+id/right_nav_s"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="48dp"
                android:src="@mipmap/icon_nav_right_arrows"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>


<Button
    android:layout_marginTop="50dp"
    android:id="@+id/logout_btn"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/layout_btn_bk_selector"
    android:text="退出登录"
    android:textSize="18sp"
    android:textColor="@color/text_color_red"

    />


</LinearLayout>
