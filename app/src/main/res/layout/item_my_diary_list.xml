<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
     >


    <ImageView
        android:id="@+id/diary_cover_imageview"
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:src="@drawable/picture_default"
        android:scaleType="fitXY"
       />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/rl_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAlphaGray"
        >

        <TextView
            android:id="@+id/diary_headline_tv"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_normal_white"
            android:text="环游世界，爽"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <TextView
            android:layout_alignLeft="@id/diary_headline_tv"
            android:layout_below="@id/diary_headline_tv"
            android:id="@+id/diary_base_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_normal_white"
            android:text="2016.02.22    /7天"
            android:textSize="12sp" />

    </RelativeLayout>

</FrameLayout>