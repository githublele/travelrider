<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_light_blue"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/login_bk"
        >
        <ImageView
            android:layout_width="126dp"
            android:layout_height="87dp"
            android:src="@mipmap/logo_rider"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:id="@+id/logo_rider_imageView"
            />
        <ImageView
            android:layout_width="77dp"
            android:layout_height="28dp"
            android:src="@mipmap/text_rider"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo_rider_imageView"
            android:layout_marginTop="6dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTransitionBlueS"
        ></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorTransitionBlueE"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        >
<LinearLayout
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@mipmap/icon_account"
        />
    <EditText
        android:layout_marginLeft="6dp"
        android:id="@+id/account_et"
        android:textColorHint="@color/colorHintGray"
        android:textColor="@color/colorNormalBlack"
        android:background="@null"
        android:hint="账号"
        android:textSize="24sp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />


</LinearLayout>
        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_bg_general_gray"
            ></View>

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"

            >

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@mipmap/icon_password"
                />
            <EditText
                android:layout_marginLeft="6dp"
                android:background="@null"
                android:id="@+id/password_et"
                android:textColorHint="@color/colorHintGray"
                android:textColor="@color/colorNormalBlack"
                android:hint="密码"
                android:inputType="textPassword"
                android:textSize="24sp"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="189dp"
            android:id="@+id/login_bt"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:background="@drawable/login_btn_bk_selector"
            android:text="登录"
            android:textColor="@color/text_color_normal_white"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/regist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="没有账号？立即注册!"
            android:textColor="@color/text_color_light_blue"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="32dp"
            />

    </RelativeLayout>
    


</LinearLayout>
