<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/diary_sheet_ll"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date_sort_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="DAY1"
            android:textSize="20sp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/diary_sheet_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="2016年03月01日 周二"
            android:textSize="15sp" 
            android:textColor="@color/text_color_general_black"
             />
   <include layout="@layout/line_layout" />
    </LinearLayout>

    

    <LinearLayout
        android:padding="8dp"
        android:id="@+id/diary_sheet_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/photo_network_imageview"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/test_sights_photo"
            />

        <TextView
            android:layout_marginTop="8dp"
            android:id="@+id/photo_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我们进去了，只见那儿和广播里说的一模一样，那儿人山人海、人流如潮，一条一条有一条的小巷，一座一座又一座的小桥和一个一个有一个的小店都被人流挤得水泄不通，一个一个又一个的小店服务员也都被忙的手忙脚乱，忙的不可开交。我们随便的找了一些东西吃了一下后，去了酒文化博物馆、西园……地方，最好的地方我觉得就是去划船了，我们一边划着船一边看着风景。之间在岸上的房子上有一个个的烟囱管，在那管子上冒出了以这一阵又一阵的炊烟，在看那炊烟是，还可以朦朦胧胧的看见炊烟后面的粉墙淡瓦，呀，泛舟河上，感觉天上和人间都融化在一起了呢！"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/location_btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="0日本" />

            <Button
                android:id="@+id/like_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="喜欢" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
