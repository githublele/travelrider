<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--自定义的style -->
    <style name="CustomBottomNavRadioBtnStle">
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@drawable/main_nav_btn_text_color_selector</item>
    </style>

    <!--顶部导航栏style（统一尺寸） -->
    <style name="CustomTopNavStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <!--顶部导航栏 返回按钮style(和顶部导航栏匹配) -->
    <style name="CustomTopNavBackButtonStyle">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@mipmap/back_navigate_bk</item>
    </style>

<!--顶部导航栏 按钮的常规style(和顶部导航栏匹配) -->
    <style name="CustomTopNavButtonStype">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--顶部导航栏 标题文字的常规style(和顶部导航栏匹配) -->
    <style name="CustomTopNavTextViewStype">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>




    <!--活动创建文字提示style -->
    <style name="CustomActCreateTipsTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/text_color_general_gray</item>
    </style>

    <!--活动创建按钮style -->
    <style name="CustomActCreateButtonStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:background">@drawable/selectable_bk</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color_general_gray</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10dp</item>

    </style>

<!--查看活动 活动信息TextView 基本Style -->
    <style name="CustomActBrowseTextViewStyleL">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CustomActBrowseTextViewStyleR">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>


</resources>
